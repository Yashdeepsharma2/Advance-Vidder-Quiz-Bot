# --- Core Bot Settings ---
# Get this from @BotFather on Telegram
TELEGRAM_BOT_TOKEN="YOUR_TELEGRAM_BOT_TOKEN_HERE"

# --- Admin & Ownership ---
# Your numeric Telegram User ID. Can be found by forwarding a message from you to @userinfobot
OWNER_ID="YOUR_NUMERIC_TELEGRAM_ID"
# Comma-separated list of numeric Telegram User IDs for other admins
ADMIN_IDS="YOUR_ID_1,YOUR_ID_2"

# --- Database Settings ---
# Default is a local SQLite database. No changes needed for a basic setup.
# For PostgreSQL, use: "postgresql://user:password@host:port/dbname"
DATABASE_URL="sqlite:///./vidder_quiz_bot.db"

# --- Quiz Settings (Optional) ---
DEFAULT_QUESTION_TIME="30"
MAX_QUESTIONS_PER_QUIZ="100"
QUIZZES_PER_PAGE="5"

# --- API Keys for Integrations (Optional) ---
OPENAI_API_KEY="YOUR_OPENAI_API_KEY_HERE"
# Get these from my.telegram.org for the cloning feature
TELEGRAM_API_ID="YOUR_TELEGRAM_API_ID_HERE"
TELEGRAM_API_HASH="YOUR_TELEGRAM_API_HASH_HERE"

# --- Logging Configuration (Optional) ---
# Can be DEBUG, INFO, WARNING, ERROR, CRITICAL
LOGGING_LEVEL="INFO"