ANTHROPIC_API_KEY=your_anthropic_api_key

# ===== QUIZ SYSTEM SETTINGS =====
MAX_QUESTIONS_PER_QUIZ=500
MAX_OPTIONS_PER_QUESTION=10
DEFAULT_QUESTION_TIME=30
MAX_QUIZ_DURATION=10800

# ===== SCORING CONFIGURATION =====
DEFAULT_POSITIVE_MARKS=1.0
DEFAULT_NEGATIVE_MARKS=0.25
ENABLE_NEGATIVE_MARKING=true
ENABLE_PARTIAL_MARKING=true
PASS_PERCENTAGE=40.0

# ===== FILE & UPLOAD SETTINGS =====
MAX_FILE_SIZE_MB=50
