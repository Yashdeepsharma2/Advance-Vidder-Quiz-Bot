ENABLE_DARK_MODE=true
ANIMATION_DURATION=300
PAGE_SIZE=10

# ===== NOTIFICATION SETTINGS =====
ENABLE_PUSH_NOTIFICATIONS=true
NOTIFICATION_SOUND=true
EMAIL_NOTIFICATIONS=false

# ===== PREMIUM FEATURES =====
ENABLE_PREMIUM=true
PREMIUM_QUIZ_LIMIT=1000
FREE_QUIZ_LIMIT=50
